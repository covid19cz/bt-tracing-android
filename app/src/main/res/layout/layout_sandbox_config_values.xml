<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="cz.covid19cz.erouska.ui.sandbox.SandboxConfigValues" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textSize="18sp"
            android:text="@{item.title}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@={item.stringValues[0]}"
                app:visibleOrInvisible="@{item.size > 0}"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@={item.stringValues[1]}"
                app:visibleOrInvisible="@{item.size > 1}"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@={item.stringValues[2]}"
                app:visibleOrInvisible="@{item.size > 2}"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@={item.stringValues[3]}"
                app:visibleOrInvisible="@{item.size > 3}"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@={item.stringValues[4]}"
                app:visibleOrInvisible="@{item.size > 4}"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@={item.stringValues[5]}"
                app:visibleOrInvisible="@{item.size > 5}"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@={item.stringValues[6]}"
                app:visibleOrInvisible="@{item.size > 6}"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@={item.stringValues[7]}"
                app:visibleOrInvisible="@{item.size > 7}"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"/>

        </LinearLayout>


    </LinearLayout>
</layout>