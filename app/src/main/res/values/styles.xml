<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="rippleColor">@color/colorPrimaryVariant</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="rippleColor">@color/colorPrimaryVariant</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">?colorSurface</item>
    </style>

    <style name="DashButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorPrimaryVariant</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">?colorSurface</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/toolbarActiveColor</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Erouska.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Erouska.Title.Active" parent="Erouska.Title">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Erouska.Title.Paused" parent="Erouska.Title">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Erouska.Title.Error" parent="Erouska.Title">
        <item name="android:textColor">@color/text_color_error_header</item>
    </style>

    <style name="Erouska.Body" parent="TextAppearance.MaterialComponents.Body1"/>
    <style name="Erouska.Item" parent="TextAppearance.MaterialComponents.Body1"/>

    <style name="Erouska.Description" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="Erouska.Caption" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>


</resources>
